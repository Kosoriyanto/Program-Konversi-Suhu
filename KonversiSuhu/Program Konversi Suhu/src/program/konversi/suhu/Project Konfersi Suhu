    private void btnKonfersiActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnKonfersiActionPerformed
        // TODO add your handling code here:
        Celsius = Float.parseFloat(txtCelcius.getText());
        Fahren = (float) ((1.8*Celsius)+32);
        Reamur = (float) (0.81*Celsius);
        Kelvin = (float) (Celsius+273.15);
        
        
        txtfahrenheit.setText("" + Fahren);
        txtReamur.setText("" + Reamur);
        txtKelvin.setText("" + Kelvin);
    }//GEN-LAST:event_btnKonfersiActionPerformed

